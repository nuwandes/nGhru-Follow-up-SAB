<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="user"
            type="org.nghru_bd.ghru.vo.User" />

        <import type="org.nghru_bd.ghru.ui.participantlist.measurementlist.MeasurementListViewModel" />

        <variable
            name="homeViewModel"
            type="org.nghru_bd.ghru.ui.participantlist.measurementlist.MeasurementListViewModel" />


        <variable
            name="userResource"
            type="org.nghru_bd.ghru.vo.Resource" />

        <variable
            name="retryCallback"
            type="org.nghru_bd.ghru.ui.common.RetryCallback" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_60"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            app:layout_collapseMode="pin"
            android:weightSum="6">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:gravity="start|center"
                android:textSize="@dimen/medium_font_size"
                android:text="@string/measurement_list_title"
                android:layout_marginStart="@dimen/height_60"
                android:textColor="@color/white"
                android:layout_weight="5"/>

            <ImageButton
                android:id="@+id/button_refresh"
                android:layout_width="@dimen/margin_32"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/img_refresh"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_60"
            android:background="@color/very_light_blue"
            android:baselineAligned="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/participantDetails"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:textSize="@dimen/medium_font_size"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp">

            <ProgressBar
                android:layout_marginTop="@dimen/margin_40"
                android:layout_width="@dimen/margin_40"
                android:layout_height="@dimen/margin_40"
                android:id="@+id/measurement_progress_bar"
                android:layout_gravity="center"
                android:visibility="gone"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/nghru_list"
                android:layout_width="match_parent"
                android:layout_height="625dp"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_10"
                android:overScrollMode="ifContentScrolls"
                tools:listitem="@layout/measurement_list_item" />

            <Button
                android:id="@+id/complete_visit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_60"
                android:text="@string/button_complete_visit"
                android:textColor="@color/white"
                android:background="@drawable/ic_button_fill_primary"
                android:layout_gravity="center"
                android:theme="@style/Button"
                android:textSize="@dimen/default_font_size"
                android:layout_marginStart="@dimen/height_60"
                android:layout_marginEnd="@dimen/height_60"
                android:layout_marginTop="@dimen/margin_32"/>

        </LinearLayout>

    </LinearLayout>

</layout>